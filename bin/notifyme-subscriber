import sys
from os.path import abspath, dirname, join, exists, expanduser
sys.path.append(abspath(join(dirname(__file__), '..')))
import logging

from time import sleep
from notifyme.subscriber import SimpleSubscriber

from argparse import ArgumentParser
import yaml

import notify2
notify2.init('NotifyMe')


def notification_callback(notification):
    """
    This function is called whenever a notification comes in.

    Args:
        notification(:class:`notifyme.notification.Notification`):
            Notification that has been received from the publisher.
    """
    n = notify2.Notification(notification['subject'])
    n.show()

def load_conf(filename):
    with open(filename) as f:
        return yaml.safe_load(f)

if __name__ == '__main__':
    logging.basicConfig(format='%(levelname)s:%(message)s', level=logging.DEBUG)
    parser = ArgumentParser(description="Notifyme subscriber component")
    parser.add_argument("-f", "--configfile", help="path to configfile")
    args = parser.parse_args()
    
    try:
        if args.configfile is not None:
            config = load_conf(args.configfile)
        else:
            config = load_conf(expanduser("~/.notifyme-subscriber.conf.yaml"))
    except FileNotFoundError:
        logging.critical("Sorry, could not find your config file. exitting!")
        sys.exit(1)

    subscriber = SimpleSubscriber(hostname=config['hostname'],
                                  port=int(config['port']),
                                  certfile=config['certfile'],
                                  keyfile=config['keyfile'],
                                  notification_callback=notification_callback,
                                  subscribed_resources=config['resources'],
                                  serverhash=config['serverhash'])
    subscriber.daemon = True
    try:
        subscriber.run()
    except KeyboardInterrupt:
        sys.exit(1)
    except Exception as e:
        logging.critical(str(e))
        sys.exit(1)
    try:
        while subscriber.running:
            sleep(1)
    except KeyboardInterrupt:
        logging.debug("Caught KeyboardInterrupt, exitting...")
        subscriber.running = False
